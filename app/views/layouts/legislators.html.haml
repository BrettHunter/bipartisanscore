%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Bipartisanscore'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Bipartisanscore'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %script{ :src => "/js/foundation.min.js" }
    :erb
      <div id="fb-root"></div>
      <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=620153441427097&version=v2.0";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>
    .backg
      %header
        = render 'layouts/navigation'   
        = render 'layouts/messages'
      .row
        .small-3.columns{ :style => "padding-left: 0;" }
          .sub
            Legislators 
      = yield
      = render 'layouts/footer'